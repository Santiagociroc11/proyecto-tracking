{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "types": ["node"],
    "allowJs": true
  },
  "include": ["server.ts", "api/**/*.ts", "lib/**/*.ts"],
  "exclude": ["node_modules", "dist", "src"]
}