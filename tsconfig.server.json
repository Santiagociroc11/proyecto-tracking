{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "types": ["node"],
    "allowJs": true
  },
  "include": ["src/server.ts", "src/api/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
